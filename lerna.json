{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "npmClientArgs": ["--no-lockfile"],
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md"],
      "message": "chore(release): %v"
    }
  }
}
