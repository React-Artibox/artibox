{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "npmClientArgs": ["--no-lockfile"],
  "useWorkspaces": true,
  "version": "2.0.3",
  "command": {
    "version": {
      "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md"],
      "message": "chore(release): %s",
      "conventionalCommits": true,
      "yes": true
    },
    "publish": {
      "contents": "dist"
    }
  }
}
