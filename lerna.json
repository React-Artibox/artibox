{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "npmClientArgs": ["--no-lockfile"],
  "useWorkspaces": true,
  "version": "0.0.0",
  "command": {
    "version": {
      "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md"],
      "message": "chore(release): %s",
      "conventionalCommits": true
    }
  }
}
