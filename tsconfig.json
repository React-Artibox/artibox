{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "composite": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "@artibox/*": ["./packages/*/src"]
    }
  }
}
